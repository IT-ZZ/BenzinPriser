<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zawar.benzinpriser.Activity.MainActivity"
    >

    <Button
        android:text="SøgPriser"
        android:layout_height="wrap_content"
        android:id="@+id/seachPrices"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150sp" />

    <TextView
        android:text="Radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RadiusView"
        android:layout_marginTop="67dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/seachPrices"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/fuelspinner"
        android:layout_marginLeft="150sp"
        android:layout_alignTop="@+id/fuelView"
        android:layout_alignEnd="@+id/radiusspinner"
        android:layout_width="125sp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/radiusspinner"

        android:layout_marginLeft="150sp"
        android:layout_marginEnd="34dp"
        android:layout_alignTop="@+id/RadiusView"
        android:layout_alignParentEnd="true"
        android:layout_width="110sp" />

    <TextView
        android:text="Brændstof type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fuelView"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_below="@+id/radiusspinner"
        android:layout_alignStart="@+id/RadiusView"
        android:layout_marginTop="45dp" />

    <TextView
        android:text="Vælge Radius og brændstof typen for at finde priser på de nærmeste tankstationer "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_bright" />


</RelativeLayout>
