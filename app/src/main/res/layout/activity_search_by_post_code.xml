<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zawar.benzinpriser.Activity.MainActivity"
    >

    <TextView
        android:text="Vælge PostNr og brændstof typen for at finde priser på de nærmeste tankstationer "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_blue_bright" />

    <Button
        android:text="SøgPriser"
        android:layout_height="wrap_content"
        android:id="@+id/seachPrices"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="150sp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/fuelspinner"
        android:layout_marginLeft="150sp"
        android:layout_alignTop="@+id/fuelView"
        android:layout_alignEnd="@+id/radiusspinner"
        android:layout_width="125sp" />

    <TextView
        android:text="Brændstof type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fuelView"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_above="@+id/seachPrices"
        android:layout_alignStart="@+id/RadiusView"
        android:layout_marginBottom="35dp" />

    <Spinner
        android:layout_height="wrap_content"
        android:id="@+id/postNumberspinner"
        android:layout_marginLeft="150sp"
        android:layout_width="125sp"
        android:layout_alignTop="@+id/PostCodesView"
        android:layout_alignEnd="@+id/radiusspinner" />

    <TextView
        android:text="PostNr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PostCodesView"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="51dp"
        android:inputType="number"
        android:layout_above="@+id/fuelView"
        android:layout_alignParentStart="true" />


</RelativeLayout>
